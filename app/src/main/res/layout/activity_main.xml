<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">

    <com.example.gwongsam.zonghenggochess.GameView
        android:id="@+id/mGameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/regret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32.0dip"
        android:layout_marginBottom="18.0dip"
        android:text="悔棋"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32.0dip"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28.0dip"
        android:text="重置"
        android:layout_alignBaseline="@id/regret"
        android:layout_alignBottom="@id/regret"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="28.0dip"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/hei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mGameView"
        android:layout_alignStart="@+id/regret"
        android:background="@null"
        android:text="黑棋" />

    <Button
        android:id="@+id/alter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mGameView"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:text="交替" />

    <Button
        android:id="@+id/bai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mGameView"
        android:layout_alignStart="@+id/refresh"
        android:background="@null"
        android:text="白棋" />
</RelativeLayout>